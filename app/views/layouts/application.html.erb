<!DOCTYPE html>
<html>
  <head>
    <title>TicketAlert</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Optional JavaScript -->


  </head>

  <body>
    <%= react_component("MainNavbar", crsf_token: form_authenticity_token, userSignedIn: user_signed_in?) %>
    <div class="container">
      <% if (notice) %>
        <%= react_component("Notification", {variant: "success", text: notice} ) %>
      <% end %>
      <% if (alert) %>
        <%= react_component("Notification", {variant: "danger", text: alert} ) %>
      <% end %>
      <%= yield %>
    </div> 
  </body>
</html>

