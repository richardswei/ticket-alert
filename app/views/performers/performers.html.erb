<h1>Events</h1>
<tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.short_title %></td>
      <td><%= event.lowest_price %></td>
      <td><%= event.date_time_utc %></td>
      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_user_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete,
                       data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>